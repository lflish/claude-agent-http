{
  "info": {
    "name": "Claude Agent HTTP API",
    "description": "HTTP REST API for Claude Agent SDK",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "session_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/health",
              "host": ["{{base_url}}"],
              "path": ["health"]
            },
            "description": "Check API health status"
          }
        },
        {
          "name": "Root Info",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/",
              "host": ["{{base_url}}"],
              "path": [""]
            },
            "description": "Get API info"
          }
        }
      ]
    },
    {
      "name": "Sessions",
      "item": [
        {
          "name": "Create Session (user_id only)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.session_id) {",
                  "    pm.collectionVariables.set('session_id', jsonData.session_id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_id\": \"testuser\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/sessions",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "sessions"]
            },
            "description": "Create a new session with user_id only"
          }
        },
        {
          "name": "Create Session (with subdir)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.session_id) {",
                  "    pm.collectionVariables.set('session_id', jsonData.session_id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_id\": \"testuser\",\n  \"subdir\": \"my-project\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/sessions",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "sessions"]
            },
            "description": "Create a new session with subdir"
          }
        },
        {
          "name": "Create Session (with metadata)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.session_id) {",
                  "    pm.collectionVariables.set('session_id', jsonData.session_id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_id\": \"testuser\",\n  \"subdir\": \"my-project\",\n  \"metadata\": {\n    \"env\": \"production\",\n    \"app\": \"myapp\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/sessions",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "sessions"]
            },
            "description": "Create a new session with metadata"
          }
        },
        {
          "name": "List All Sessions",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/sessions",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "sessions"]
            },
            "description": "List all session IDs"
          }
        },
        {
          "name": "List Sessions by User",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/sessions?user_id=testuser",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "sessions"],
              "query": [
                {
                  "key": "user_id",
                  "value": "testuser"
                }
              ]
            },
            "description": "List sessions filtered by user_id"
          }
        },
        {
          "name": "Get Session Info",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/sessions/{{session_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "sessions", "{{session_id}}"]
            },
            "description": "Get detailed session information"
          }
        },
        {
          "name": "Resume Session",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/sessions/{{session_id}}/resume",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "sessions", "{{session_id}}", "resume"]
            },
            "description": "Resume an existing session"
          }
        },
        {
          "name": "Delete Session",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/sessions/{{session_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "sessions", "{{session_id}}"]
            },
            "description": "Close and delete a session"
          }
        }
      ]
    },
    {
      "name": "Chat",
      "item": [
        {
          "name": "Send Message (Sync)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"session_id\": \"{{session_id}}\",\n  \"message\": \"What is 2 + 2?\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/chat",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "chat"]
            },
            "description": "Send a message and wait for complete response"
          }
        },
        {
          "name": "Send Message (Streaming)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "text/event-stream"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"session_id\": \"{{session_id}}\",\n  \"message\": \"Write a hello world program in Python\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/chat/stream",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "chat", "stream"]
            },
            "description": "Send a message with SSE streaming response"
          }
        }
      ]
    }
  ]
}
